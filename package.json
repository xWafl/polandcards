{
    "name": "unknown-server",
    "version": "0.0.1",
    "description": "Server of Project Unknown website.",
    "main": "index.js",
    "scripts": {
        "lint": "eslint **/*.ts",
        "format": "prettier --write \"**/*.+(js|json|ts)\"",
        "check": "npm run format && npm run lint",
        "start": "node -r ./register.js ./dist/src/index.js",
        "start-dev": "node -r ./register.js src/index.ts",
        "dev": "nodemon",
        "tsc": "tsc",
        "build": "npm run tsc",
        "migrate": "knex migrate:latest",
        "remake-db-admin": "dropdb --if-exists unknown-db && createdb unknown-db",
        "fresh-testdb": "dropdb --if-exists test-unknown && createdb test-unknown",
        "test": "npm run fresh-testdb && cross-env NODE_ENV=test mocha -r ./register.js 'src/**/*.test.ts' --exit",
        "test-coverage": "nyc npm test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Project-Unknown-GH/unknown-server.git"
    },
    "keywords": [
        "koa",
        "koa-boilerplate",
        "koa-typescript"
    ],
    "author": "ImperialWater",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Project-Unknown-GH/unknown-server/issues"
    },
    "homepage": "https://github.com/Project-Unknown-GH/unknown-server#readme",
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^0.1.3",
        "@types/bcrypt": "^3.0.0",
        "@types/chai": "^4.2.7",
        "@types/hapi__joi": "^17.1.1",
        "@types/koa": "^2.11.0",
        "@types/koa-bodyparser": "^4.3.0",
        "@types/koa-json": "^2.0.18",
        "@types/koa-logger": "^3.1.1",
        "@types/koa-router": "^7.0.42",
        "@types/koa-session": "^5.10.2",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.12.21",
        "@types/pg": "^7.14.3",
        "@types/supertest": "^2.0.8",
        "@types/ws": "^7.2.5",
        "@typescript-eslint/eslint-plugin": "^2.12.0",
        "@typescript-eslint/parser": "^2.12.0",
        "chai": "^4.2.0",
        "cross-env": "^6.0.3",
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-import": "^2.19.1",
        "eslint-plugin-node": "^10.0.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "mocha": "^6.2.2",
        "nodemon": "^2.0.2",
        "nyc": "^14.1.1",
        "prettier": "^1.19.1",
        "source-map-support": "^0.5.16",
        "sqlite3": "^4.1.1",
        "supertest": "^4.0.2",
        "ts-node": "^8.5.4",
        "typescript": "^3.7.3"
    },
    "dependencies": {
        "@hapi/joi": "^17.1.1",
        "bcrypt": "^4.0.1",
        "dotenv": "^8.2.0",
        "knex": "^0.20.4",
        "koa": "^2.11.0",
        "koa-bodyparser": "^4.2.1",
        "koa-json": "^2.0.2",
        "koa-logger": "^3.2.1",
        "koa-router": "^7.4.0",
        "koa-session": "^6.0.0",
        "pg": "^7.15.1",
        "ws": "^7.3.0"
    }
}
